<%= simple_form_for @source do |f| %>
  <%= f.error_notification %>
  <div class='form-inputs'>
    <%= f.input :citation %>
    <%= f.input :title %>
    <%= f.input :author_list %>
    <%= f.association :authors %>
    <%= f.input :year %>
    <%= f.association :topic %>
    <%= f.input :purpose %>
    <%= f.input :discard_reason %>
  </div>
  <div class='form-actions'>
    <%= f.button :submit %>
  </div>
<% end %>
